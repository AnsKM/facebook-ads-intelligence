{
  "name": "facebook-ads-intelligence-scraper",
  "version": "2.0.0",
  "description": "Professional-grade Facebook Ads competitive intelligence scraper",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:safe": "node src/index.js --safe-mode",
    "start:test": "node src/index.js --test-mode --max-ads=10",
    "dev": "node --watch src/index.js",
    "test": "jest",
    "lint": "eslint src/",
    "reset": "rm -rf storage/ && mkdir -p storage/session-pool storage/error-screenshots",
    "clean": "rm -rf storage/ downloads/ data/*.json"
  },
  "keywords": [
    "facebook-ads",
    "competitive-intelligence",
    "web-scraping",
    "crawlee",
    "playwright",
    "marketing-automation",
    "ad-analysis"
  ],
  "author": "Facebook Ads Intelligence Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/facebook-ads-intelligence.git"
  },
  "dependencies": {
    "crawlee": "^3.7.2",
    "playwright": "^1.40.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "dotenv": "^16.3.1",
    "user-agents": "^1.1.340",
    "sharp": "^0.33.0",
    "tesseract.js": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}